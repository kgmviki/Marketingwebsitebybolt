<style>
  .footer {
    background: #1f2937;
    color: #e5e7eb;
    padding: 3rem 0 1rem;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }
  
  .footer-description {
    margin: 1rem 0;
    color: #9ca3af;
    line-height: 1.6;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: #374151;
    color: #9ca3af;
    border-radius: 50%;
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
  }
  
  .footer-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: white;
  }
  
  .footer-links {
    list-style: none;
  }
  
  .footer-links li {
    margin-bottom: 0.5rem;
  }
  
  .footer-links a {
    color: #9ca3af;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-links a:hover {
    color: #667eea;
  }
  
  .contact-info p {
    margin-bottom: 1rem;
    color: #9ca3af;
  }
  
  .footer-bottom {
    border-top: 1px solid #374151;
    padding-top: 1rem;
    text-align: center;
    color: #9ca3af;
  }
  
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>