---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Digital Marketing Services | Meta Ads & AI Tools">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="services-hero section-padding">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">
            Professional <span class="text-gradient">Digital Marketing Services</span>
          </h1>
          <p class="hero-description">
            Comprehensive marketing solutions designed to grow your business using Meta ads, AI tools, and data-driven strategies.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Grid -->
    <section class="services-detailed section-padding">
      <div class="container">
        <div class="services-grid">
          <!-- Meta Ads Management -->
          <div class="service-detailed">
            <div class="service-header">
              <div class="service-icon">
                <svg width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                  <path d="M2 17l10 5 10-5"/>
                  <path d="M2 12l10 5 10-5"/>
                </svg>
              </div>
              <div class="service-info">
                <h2 class="service-title">Meta Ads Management</h2>
                <p class="service-subtitle">Facebook & Instagram Advertising</p>
              </div>
            </div>
            <div class="service-content">
              <p class="service-description">
                Complete Facebook and Instagram advertising management from strategy to execution. I create, optimize, and scale campaigns that deliver real results for your business.
              </p>
              <div class="service-features">
                <h3>What's Included:</h3>
                <ul>
                  <li>Campaign strategy and planning</li>
                  <li>Audience research and targeting</li>
                  <li>Creative development and testing</li>
                  <li>Budget optimization and scaling</li>
                  <li>Performance monitoring and reporting</li>
                  <li>A/B testing and optimization</li>
                </ul>
              </div>
              <div class="service-pricing">
                <span class="price">Starting at $1,500/month</span>
                <span class="price-note">+ ad spend</span>
              </div>
            </div>
          </div>

          <!-- AI Marketing Tools -->
          <div class="service-detailed">
            <div class="service-header">
              <div class="service-icon">
                <svg width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <div class="service-info">
                <h2 class="service-title">AI Marketing Tools</h2>
                <p class="service-subtitle">Cutting-edge AI Solutions</p>
              </div>
            </div>
            <div class="service-content">
              <p class="service-description">
                Leverage the power of artificial intelligence to automate and optimize your marketing efforts. From content creation to audience analysis, AI tools give you a competitive advantage.
              </p>
              <div class="service-features">
                <h3>What's Included:</h3>
                <ul>
                  <li>AI-powered content creation</li>
                  <li>Automated audience segmentation</li>
                  <li>Predictive analytics and insights</li>
                  <li>Chatbot setup and optimization</li>
                  <li>AI-driven campaign optimization</li>
                  <li>Performance prediction modeling</li>
                </ul>
              </div>
              <div class="service-pricing">
                <span class="price">Starting at $1,200/month</span>
                <span class="price-note">Tools included</span>
              </div>
            </div>
          </div>

          <!-- Campaign Optimization -->
          <div class="service-detailed">
            <div class="service-header">
              <div class="service-icon">
                <svg width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M3 3v18h18"/>
                  <path d="M18.7 8l-5.1 5.2-2.8-2.7L7 14.3"/>
                </svg>
              </div>
              <div class="service-info">
                <h2 class="service-title">Campaign Optimization</h2>
                <p class="service-subtitle">Performance Enhancement</p>
              </div>
            </div>
            <div class="service-content">
              <p class="service-description">
                Maximize your existing campaigns' performance through data-driven optimization strategies. I analyze, test, and improve every aspect of your marketing funnel.
              </p>
              <div class="service-features">
                <h3>What's Included:</h3>
                <ul>
                  <li>Comprehensive campaign audit</li>
                  <li>Conversion rate optimization</li>
                  <li>Landing page optimization</li>
                  <li>Funnel analysis and improvement</li>
                  <li>ROI enhancement strategies</li>
                  <li>Ongoing performance monitoring</li>
                </ul>
              </div>
              <div class="service-pricing">
                <span class="price">Starting at $800/month</span>
                <span class="price-note">Per campaign</span>
              </div>
            </div>
          </div>

          <!-- Analytics & Reporting -->
          <div class="service-detailed">
            <div class="service-header">
              <div class="service-icon">
                <svg width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <path d="M9 9h6v6H9z"/>
                  <path d="M9 1v6"/>
                  <path d="M15 1v6"/>
                  <path d="M9 15v6"/>
                  <path d="M15 15v6"/>
                  <path d="M1 9h6"/>
                  <path d="M17 9h6"/>
                  <path d="M1 15h6"/>
                  <path d="M17 15h6"/>
                </svg>
              </div>
              <div class="service-info">
                <h2 class="service-title">Analytics & Reporting</h2>
                <p class="service-subtitle">Data-Driven Insights</p>
              </div>
            </div>
            <div class="service-content">
              <p class="service-description">
                Comprehensive tracking and reporting to measure success and identify growth opportunities. Get clear insights into your marketing performance with actionable recommendations.
              </p>
              <div class="service-features">
                <h3>What's Included:</h3>
                <ul>
                  <li>Custom dashboard setup</li>
                  <li>Weekly performance reports</li>
                  <li>ROI and ROAS tracking</li>
                  <li>Conversion tracking setup</li>
                  <li>Competitor analysis</li>
                  <li>Strategic recommendations</li>
                </ul>
              </div>
              <div class="service-pricing">
                <span class="price">Starting at $600/month</span>
                <span class="price-note">Standalone service</span>
              </div>
            </div>
          </div>

          <!-- Strategy Consultation -->
          <div class="service-detailed">
            <div class="service-header">
              <div class="service-icon">
                <svg width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
              <div class="service-info">
                <h2 class="service-title">Strategy Consultation</h2>
                <p class="service-subtitle">Expert Marketing Guidance</p>
              </div>
            </div>
            <div class="service-content">
              <p class="service-description">
                Get expert guidance on your marketing strategy with personalized consultation sessions. Perfect for businesses looking for direction and actionable insights.
              </p>
              <div class="service-features">
                <h3>What's Included:</h3>
                <ul>
                  <li>1-on-1 strategy sessions</li>
                  <li>Marketing audit and analysis</li>
                  <li>Custom strategy roadmap</li>
                  <li>Implementation guidance</li>
                  <li>Follow-up support</li>
                  <li>Resource recommendations</li>
                </ul>
              </div>
              <div class="service-pricing">
                <span class="price">$200/hour</span>
                <span class="price-note">Minimum 2 hours</span>
              </div>
            </div>
          </div>

          <!-- Done-For-You Packages -->
          <div class="service-detailed">
            <div class="service-header">
              <div class="service-icon">
                <svg width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 6L9 17l-5-5"/>
                </svg>
              </div>
              <div class="service-info">
                <h2 class="service-title">Done-For-You Packages</h2>
                <p class="service-subtitle">Complete Marketing Solutions</p>
              </div>
            </div>
            <div class="service-content">
              <p class="service-description">
                Comprehensive marketing packages that handle everything for you. From strategy to execution, I manage your entire digital marketing presence.
              </p>
              <div class="service-features">
                <h3>What's Included:</h3>
                <ul>
                  <li>Full marketing strategy</li>
                  <li>Campaign creation and management</li>
                  <li>Content creation and scheduling</li>
                  <li>Analytics and optimization</li>
                  <li>Monthly strategy calls</li>
                  <li>Dedicated account management</li>
                </ul>
              </div>
              <div class="service-pricing">
                <span class="price">Starting at $3,000/month</span>
                <span class="price-note">All-inclusive</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="process-section section-padding">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">My Process</h2>
          <p class="section-description">
            A proven methodology that delivers consistent results for every client
          </p>
        </div>
        
        <div class="process-steps">
          <div class="process-step">
            <div class="step-number">01</div>
            <div class="step-content">
              <h3 class="step-title">Discovery & Analysis</h3>
              <p class="step-description">
                I start by understanding your business, goals, and current marketing efforts through comprehensive analysis.
              </p>
            </div>
          </div>
          
          <div class="process-step">
            <div class="step-number">02</div>
            <div class="step-content">
              <h3 class="step-title">Strategy Development</h3>
              <p class="step-description">
                Based on insights, I create a custom marketing strategy tailored to your specific needs and objectives.
              </p>
            </div>
          </div>
          
          <div class="process-step">
            <div class="step-number">03</div>
            <div class="step-content">
              <h3 class="step-title">Implementation</h3>
              <p class="step-description">
                I execute the strategy with precision, setting up campaigns, creating content, and launching initiatives.
              </p>
            </div>
          </div>
          
          <div class="process-step">
            <div class="step-number">04</div>
            <div class="step-content">
              <h3 class="step-title">Optimization</h3>
              <p class="step-description">
                Continuous monitoring and optimization ensure maximum performance and ROI from your marketing investments.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section section-padding">
      <div class="container">
        <div class="cta-content">
          <h2 class="cta-title">Ready to Get Started?</h2>
          <p class="cta-description">
            Choose the service that best fits your needs, or let's discuss a custom solution for your business.
          </p>
          <div class="cta-buttons">
            <a href="/contact" class="btn btn-primary">Get Free Consultation</a>
            <a href="/about" class="btn btn-secondary">Learn More About Me</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .services-hero {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    padding-top: 120px;
    text-align: center;
  }
  
  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }
  
  .hero-description {
    font-size: 1.25rem;
    color: #6b7280;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .services-detailed {
    background: white;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
    gap: 3rem;
  }
  
  .service-detailed {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s ease;
  }
  
  .service-detailed:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  
  .service-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }
  
  .service-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 1rem;
    flex-shrink: 0;
  }
  
  .service-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }
  
  .service-subtitle {
    color: #6b7280;
    font-size: 1rem;
  }
  
  .service-description {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 2rem;
  }
  
  .service-features h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .service-features ul {
    list-style: none;
    margin-bottom: 2rem;
  }
  
  .service-features li {
    padding: 0.5rem 0;
    position: relative;
    padding-left: 1.5rem;
    color: #6b7280;
  }
  
  .service-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: #10b981;
    font-weight: bold;
  }
  
  .service-pricing {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
  }
  
  .price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #667eea;
  }
  
  .price-note {
    color: #6b7280;
    font-size: 0.875rem;
  }
  
  .process-section {
    background: #f8fafc;
  }
  
  .process-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .process-step {
    text-align: center;
    padding: 2rem;
  }
  
  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 50%;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }
  
  .step-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .step-description {
    color: #6b7280;
    line-height: 1.6;
  }
  
  .cta-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-align: center;
  }
  
  .cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  .cta-description {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
  
  .cta-section .btn-primary {
    background: white;
    color: #667eea;
  }
  
  .cta-section .btn-primary:hover {
    background: #f8fafc;
  }
  
  .cta-section .btn-secondary {
    border-color: white;
    color: white;
  }
  
  .cta-section .btn-secondary:hover {
    background: white;
    color: #667eea;
  }
  
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }
    
    .services-grid {
      grid-template-columns: 1fr;
    }
    
    .service-header {
      flex-direction: column;
      text-align: center;
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-title {
      font-size: 2rem;
    }
  }
</style>